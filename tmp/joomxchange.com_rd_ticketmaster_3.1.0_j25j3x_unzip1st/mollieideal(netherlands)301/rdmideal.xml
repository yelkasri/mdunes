<?xml version="1.0" encoding="utf-8"?>
<extension version="2.5" type="plugin" group="rdmedia" method="upgrade">
        <name>RDMedia Mollie IDeal Plugin</name>
        <author>Robert Dam</author>
        <creationDate>June 2013</creationDate>
        <copyright>Copyright (C) 2008 Holder. All rights reserved.</copyright>
        <license>GNU General Public License</license>
        <authorEmail>info@rd-media.org</authorEmail>
        <authorUrl>http:rd-media.org</authorUrl>
        <version>3.0.1</version>
        <description> 
		<![CDATA[
			An IDeal Solution for Mollie - Plugin for Ticketmaster  <br/><br/>
			Wilt u extra korting op IDEAL betalingen van Mollie? RD-Media biedt u transacties aan voor 0.65 euro per transactie. Contacteer ben@rd-media.org voor meer informatie en de mogelijkheden voor een korting van bij 35% !!
		]]>
		</description>

		<files>
			<filename plugin="rdmideal">rdmideal.php</filename>
			<folder>rdmedia_mollie</folder>
		</files>
		
		<languages>
			<language tag="en-GB">language/en-GB.plg_rdmedia_rdmideal.ini</language>
		</languages>			

		<config>
			<fields name="params">
			
				<fieldset name="basic">
					<field name="partner_id" type="text"
						default=""
						size="40"
						description="PLG_TICKETMSTER_RDMIDEAL_PARTNER_ID_DESC"
						label="PLG_TICKETMSTER_RDMIDEAL_PARTNER_ID"
					/>	
					
					<field name="layout" type="list"
						default="0"
						description="PLG_TICKETMSTER_RDMIDEAL_VIEW_DESCRIPTION"
						label="Plugin Layout"
					>
						<option value="0">PLG_TICKETMSTER_RDMIDEAL_HORIZONTAL_VIEW</option>
						<option value="1">PLG_TICKETMSTER_RDMIDEAL_VERTICAL_VIEW</option>
					</field>								
					
					<field name="description" type="text"
						default="0"
						size="40"
						description="PLG_TICKETMSTER_RDMIDEAL_DESCRIPTION_IDEAL_2"
						label="PLG_TICKETMSTER_RDMIDEAL_DESCRIPTION_IDEAL"
					/>	
					
					<field name="infobox" type="text"
						default="0"
						size="20"
						description="PLG_TICKETMSTER_RDMIDEAL_SHORT_DESCRIPTION"
						label="PLG_TICKETMSTER_RDMIDEAL_DESCRIPTION"
					/>									
	
					<field name="sandbox_on" type="list"
						default="0"
						description="PLG_TICKETMSTER_RDMIDEAL_SANDBOX_DESC"
						label="PLG_TICKETMSTER_RDMIDEAL_SANDBOX"
					>
						<option value="0">JOFF</option>
						<option value="1">JON</option>
					</field>	
					
					<field name="developermode" type="list"
						default="0"
						description="PLG_TICKETMSTER_RDMIDEAL_DEV_MODE_DESC"
						label="PLG_TICKETMSTER_RDMIDEAL_DEV_MODE"
					>
						<option value="0">JOFF</option>
						<option value="1">JON</option>
					</field>					
	
					<field name="developer_email" type="text"
						default="0"
						size="50"
						description="PLG_TICKETMSTER_RDMIDEAL_MAIL_DESC"
						label="PLG_TICKETMSTER_RDMIDEAL_MAIL"
					/>	
	
					<field name="failure_tpl" type="text"
						default="0"
						size="15"
						description="PLG_TICKETMSTER_RDMIDEAL_FAILED_PAGE_DESC"
						label="PLG_TICKETMSTER_RDMIDEAL_FAILED_PAGE"
					/>	
	
					<field name="success_tpl" type="text"
						default="0"
						size="15"
						description="PLG_TICKETMSTER_RDMIDEAL_SUCCESS_PAGE_DESC"
						label="PLG_TICKETMSTER_RDMIDEAL_SUCCESS_PAGE"
					/>
					
					<field name="confirmation" type="list"
						default="0"
						description="PLG_TICKETMSTER_RDMIDEAL_SEND_CONFIRMATION_DESC"
						label="PLG_TICKETMSTER_RDMIDEAL_SEND_CONFIRMATION"
					>
						<option value="0">JOFF</option>
						<option value="1">JON</option>
					</field>									
					
				</fieldset>
				
			</fields>
		</config>

</extension>